{
  "name": "node-starter",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "wireit",
    "css:critical": "wireit",
    "dev": "wireit",
    "fonts:download": "wireit",
    "fonts:subset": "wireit",
    "fonts": "wireit",
    "format": "wireit",
    "lint": "wireit",
    "prepare": "husky",
    "preview": "wireit",
    "svg": "wireit"
  },
  "wireit": {
    "build": {
      "command": "astro check && astro build",
      "dependencies": [
        "fonts:subset"
      ],
      "files": [
        "src/**/*",
        "public/**/*",
        "astro.config.mjs",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "css:critical": {
      "command": "critical index.html --base dist --inline --width 1440 --height 900 --ignore-external"
    },
    "dev": {
      "command": "astro dev",
      "files": [
        "src/",
        "public/",
        "package.json",
        "tsconfig.json",
        "astro.config.mjs"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "service": true
    },
    "fonts:download": {
      "command": "vite-node ./lib/download-fonts.ts",
      "files": [
        "lib/download-fonts.ts"
      ],
      "output": [
        "assets/fonts/**/*"
      ]
    },
    "fonts:subset": {
      "command": "vite-node ./lib/subset-fonts.ts",
      "files": [
        "lib/subset-fonts.ts",
        "assets/fonts/**/*"
      ],
      "output": [
        "public/fonts/**/*"
      ]
    },
    "fonts": {
      "dependencies": [
        "fonts:download",
        "fonts:subset"
      ]
    },
    "format": {
      "command": "prettier .",
      "files": [
        "./src/**/*.{ts,js,md,astro}",
        "package.json",
        ".prettierrc",
        ".editorconfig"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint --color .",
      "files": [
        "src/**/*.{ts,js}",
        "eslint.config.mjs",
        "tsconfig*.json"
      ],
      "output": []
    },
    "preview": {
      "command": "astro preview",
      "dependencies": [
        "build"
      ],
      "service": true
    },
    "svg": {
      "command": "svg-sprite --symbol --symbol-dest public assets/svg/*.svg",
      "files": [
        "assets/svg/",
        "package.json"
      ],
      "output": [
        "public/svg/"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**",
        "package.json",
        "vite.config.mts"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@astrojs/lit": "^4.3.0",
    "@astrojs/sitemap": "^3.1.6",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "astro": "^4.13.1",
    "ferment-ui": "file:../ferment-ui/packages/core",
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.1",
    "@eslint/js": "^9.7.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^20.14.12",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "svg-sprite": "^2.0.4",
    "type-fest": "^4.22.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1",
    "vite-node": "^2.0.4",
    "vitest": "^2.0.4",
    "wireit": "^0.14.5"
  },
  "lint-staged": {
    "*.{js,ts,md,mdx,astro}": [
      "npm run format -- --check",
      "npm run lint"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
