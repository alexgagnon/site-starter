{
  "name": "node-starter",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "wireit",
    "css:critical": "wireit",
    "dev": "wireit",
    "fonts:download": "wireit",
    "fonts:subset": "wireit",
    "fonts": "wireit",
    "format": "wireit",
    "lint": "wireit",
    "prepare": "husky",
    "preview": "wireit",
    "svg:optimize": "wireit",
    "svg:spritemap": "wireit"
  },
  "wireit": {
    "build": {
      "command": "astro check && astro build",
      "dependencies": [
        "fonts:subset"
      ],
      "files": [
        "src/**/*",
        "public/**/*",
        "astro.config.mjs",
        "tsconfig.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "css:critical": {
      "command": "critical index.html --base dist --inline --width 1440 --height 900 --ignore-external"
    },
    "dev": {
      "command": "astro dev",
      "files": [
        "src/",
        "public/",
        "package.json",
        "tsconfig.json",
        "astro.config.mjs"
      ],
      "service": true
    },
    "fonts:download": {
      "command": "tsx ./scripts/download-fonts.ts",
      "files": [
        "scripts/download-fonts.ts"
      ],
      "output": [
        "raw/fonts/**/*"
      ]
    },
    "fonts:subset": {
      "command": "tsx ./scripts/subset-fonts.ts",
      "files": [
        "scripts/subset-fonts.ts",
        "raw/fonts/**/*"
      ],
      "output": [
        "public/fonts/**/*"
      ]
    },
    "fonts": {
      "dependencies": [
        "fonts:download",
        "fonts:subset"
      ]
    },
    "format": {
      "command": "prettier .",
      "files": [
        "./src/**/*.{ts,js,md,astro}",
        "package.json",
        ".prettierrc",
        ".editorconfig"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint --color .",
      "files": [
        "src/**/*.{ts,js}",
        "eslint.config.mjs",
        "tsconfig*.json"
      ],
      "output": []
    },
    "preview": {
      "command": "astro preview",
      "dependencies": [
        "build"
      ],
      "service": true
    },
    "svg:optimize": {
      "command": "svgo -f raw/svg/ -o public/svg/ --config svgo.config.cjs"
    },
    "svg:spritemap": {
      "command": "tsx scripts/svg-spritemap.ts",
      "files": [
        "raw/svg/sprites/",
        "package.json"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**",
        "package.json",
        "vite.config.mts"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [],
  "author": "alexgagnon",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@astrojs/lit": "^4.3.0",
    "@astrojs/sitemap": "^3.1.6",
    "@ferment-ui/astro": "file:../ferment-ui/packages/astro",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "astro": "^4.15.4",
    "ferment-ui": "file:../ferment-ui/packages/core",
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.3",
    "@eslint/js": "^9.7.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^20.14.12",
    "@types/svg-sprite": "^0.0.39",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "husky": "^9.0.11",
    "lightningcss": "^1.26.0",
    "lint-staged": "^15.2.7",
    "playwright": "^1.47.2",
    "prettier": "^3.3.3",
    "svg-sprite": "^2.0.4",
    "svgo": "^3.3.2",
    "tsx": "^4.19.0",
    "type-fest": "^4.22.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1",
    "vitest": "^2.0.4",
    "wireit": "^0.14.5"
  },
  "lint-staged": {
    "*.{js,ts,md,mdx,astro}": [
      "npm run format -- --write",
      "npm run lint"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
